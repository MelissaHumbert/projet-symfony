{% extends 'base.html.twig' %}

{% block title %}Annonce{% endblock %}

{% block body %}
    <h1 class="text-center m-3">Annonce N°{{ product.id }}</h1>

    <table class="table table-secondary table-striped table-hover ">
        <tbody>
        <tr>
            <th>ID</th>
            <td>{{ product.id }}</td>
        </tr>
        <tr>
            <th>Nom du Produit</th>
            <td>{{ product.productName }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ product.productDescription | raw }}</td>
        </tr>
        <tr>
            <th>Photo</th>
            <td><img src="https://i.picsum.photos/id/740/200/200.jpg?hmac=9ZHqyCz7Gy7V9lyQcKw8m1VAVXW6mjx26txirRYVaSc"  alt="{{ product.productName }}"> </td>
        </tr>
        <tr>
            <th>Prix</th>
            <td>{{ product.productPrice }} €</td>
        </tr>
        </tbody>
    </table>

    <div class="d-flex justify-content-around">
        <a href="{{ path('product_edit', {'id': product.id}) }}" class="btn btn-warning m-3">Éditer</a>
        {{ include('product/_delete_form.html.twig') }}
        <a href="{{ path('product_index') }}" class="btn btn-primary m-3">Retour</a>
    </div>  

{% endblock %}
