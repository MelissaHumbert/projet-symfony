{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <div class="text-center p-3">
        <h1>Petites Annonces</h1>
    </div>
    <div class="row">
        <div class="col-md-8">
            {% for prod in product %}
                <div class="card col-md-4" style="width: 18rem;">
                    <img class="card-img-top" src="/assets/img/{{ prod.productPicture }}" alt="{{ prod.productName }}">
                    <div class="card-body">
                        <h5 class="card-title">{{ prod.productName }}</h5>

                        <a href= "{{ path('product_index') }}" class="btn btn-primary">retour</a>
                    </div>
                </div>
            {% endfor %}
        </div>

    </div>
{% endblock %}
