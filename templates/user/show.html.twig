{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1 class="text-center m-3">Utilisateur</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ user.id }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ user.email }}</td>
        </tr>
        <tr>
            <th>Mot de passe</th>
            <td>{{ user.password }}</td>
        </tr>
        <tr>
            <th>Prénom</th>
            <td>{{ user.firstName }}</td>
        </tr>
        <tr>
            <th>Nom</th>
            <td>{{ user.lastName }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('user_index') }}" class="btn btn-primary">Retour à la liste</a>

    <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-warning">Éditer</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
